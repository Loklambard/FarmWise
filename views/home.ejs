<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FarmWise</title>
    <link rel="icon" href="./fev_rb.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        /* Custom CSS styles */
        #logo {
            width: 200px;
            margin: auto;
            color: green;
            display: flex;
            transition: transform 0.3s ease-in-out;
        }

        #logo:hover {
            transform: scale(1.05); /* Slight zoom effect on hover */
        }

        .attachment-label {
            font-size: 1.2rem;
            color: #2f855a; /* Green */
        }

        .file-input {
            display: none;
        }

        .upload-btn {
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            background-color: #38a169; /* Green */
            color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .upload-btn:hover {
            background-color: #2f855a; /* Darker green */
            transform: translateY(-3px);
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
        }

        .upload-icon {
            width: 40px;
            height: 40px;
        }

        .submit-btn {
            background-color: #38a169; /* Green */
            color: white;
            padding: 10px 25px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            display: block;
            margin: auto;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .submit-btn:hover {
            background-color: #2f855a; /* Darker green */
            transform: translateY(-3px);
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
        }

        /* Navbar */
        #navbar {
            display: flex;
            background-color: #ffffff;
            border-bottom: 2px solid #2f855a; /* Green border */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Add shadow to navbar */
            transition: box-shadow 0.3s ease-in-out;
        }

        #navbar:hover {
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15); /* Deeper shadow on hover */
        }

        /* Profile tab styles */
        .profile-tab {
            background-color: #38a169; /* Green */
            color: white;
            padding: 10px 20px;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .profile-tab:hover {
            background-color: #2f855a; /* Darker green */
            transform: translateY(-3px);
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
        }

        /* Sidebar styles */
        .sidebar {
            position: fixed;
            top: 0;
            right: -300px;
            height: 100%;
            width: 300px;
            background-color: #ffffff;
            border-left: 2px solid #2f855a; /* Green border */
            padding: 20px;
            transition: all 0.3s ease-in-out;
            z-index: 999;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Add shadow */
        }

        .sidebar.visible {
            right: 0;
        }

        .sidebar-content {
            color: #2f855a; /* Green */
        }

        .user-icon {
            font-size: 24px;
        }

        #upload-container{
            margin-top: 150px;;
        }

        /* Result section for disease and cure */
        #result-section {
            margin-top: 20px;
            text-align: center;
            
        }

        #result-box {
            height: 250px;
            padding: 50px 20px;
            background-color: #f0fff4;
            border-radius: 10px;
            margin-top: 20px;
            color: #2f855a;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease-in-out;
            
        }

        #result-box:hover {
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
        }



        #footer{
            position: relative;
            font-size: 12px;
            margin-top: 100px;
            align-content: center;
        }
    </style>
</head>

<body class="bg-white text-gray-800">

    <div id="navbar" class="flex justify-between items-center px-4 py-2 sticky top-0 ">
        <div id="logo" class="flex items-center">
            <!-- <img src="public/images/png/logo-no-background.png" alt="FarmWise Logo"> -->
             <h2 class="text-2xl font-bold mb-4" >FarmWise</h2>
        </div>
        <div class="mr-4">
            <button id="profile-tab">
                <i id="user-icon" class="fa fa-user"></i>
            </button>
        </div>
    </div>

    <div id="sidebar" class="sidebar shadow-lg">
        <div class="sidebar-content">
            <h2 class="text-2xl font-semibold mb-4">User Details</h2>
            <p class="mb-2"></p>
        </div>
    </div>

    <div id="upload-container" class="container mx-auto mt-10 flex justify-center">
        <div class="w-full md:w-1/2 lg:w-1/3">
            <div class="mb-12">
                <label for="file" class="attachment-label mb-2 block">Upload Plant Image</label>
                <div class="relative">
                    <label for="file"
                        class="upload-btn flex items-center justify-center rounded-md border-dashed p-6 transition duration-300 ease-in-out">
                        <input type="file" id="image-upload" accept="image/*">
                        <svg class="upload-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                            fill="currentColor">
                            <path fill-rule="evenodd"
                                d="M10 12a1 1 0 0 0 0-2V4.41l2.3 2.3a1 1 0 0 0 1.4-1.42l-4-4a1 1 0 0 0-1.4 0l-4 4a1 1 0 1 0 1.4 1.42L9 4.41V10a1 1 0 0 0 2 0z" />
                            <path fill-rule="evenodd"
                                d="M3 15a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v2a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-2z" />
                        </svg>
                        <span class="ml-2 text-base">Drag &amp; drop or <span class="underline">browse</span></span>
                    </label>
                </div>
            </div>
        </div>
    </div>

    <!-- Result Section -->
    <div id="result-section" class="container mx-auto flex justify-center">
        <div class="w-full md:w-1/2 lg:w-1/3">
            <div id="result-box">
                <h3 class="text-xl font-semibold mb-2">Plant Disease: <span id="disease-name">Waiting for input...</span></h3>
                <p><strong>Cure:</strong> <span id="disease-cure">Please upload an image to get the prediction.</span></p>
            </div>
        </div>
    </div>

    <footer class="footer text-center mt-10 p-4 transition duration-300 ease-in-out hover:shadow-lg hover:bg-green-100 hover:text-green-800" id="footer" >
        <p class="transition-all duration-300 ease-in-out hover:text-green-600">
            FarmWise: Smart crop detection at your fingertips. Verify results for best accuracy.
        </p>
    </footer>

    <script>
        const profileTab = document.getElementById('profile-tab');
        const sidebar = document.getElementById('sidebar');

        profileTab.addEventListener('mouseenter', () => {
            sidebar.classList.add('visible');
        });

        sidebar.addEventListener('mouseleave', (e) => {
            if (!e.relatedTarget || !e.relatedTarget.closest('.profile-tab')) {
                sidebar.classList.remove('visible');
            }
        });
    </script>

    <script>
        document.getElementById('image-upload').addEventListener('change', async function (event) {
            const file = event.target.files[0];

            const formData = new FormData();
            formData.append('image', file);

            try {
                const response = await fetch('/analyze-disease', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    const data = await response.json();

                    document.getElementById('disease-name').textContent = data.disease;
                    document.getElementById('disease-cure').textContent = data.cure;

                    document.getElementById('result-box').classList.remove('hidden');
                } else {
                    console.error('Failed to analyze the image');
                }
            } catch (error) {
                console.error('Error:', error);
            }
        });
    </script>

</body>

</html>